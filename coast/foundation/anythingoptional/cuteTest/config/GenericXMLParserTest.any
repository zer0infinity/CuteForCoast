{
	/configuredTests
	{
		/Empty
		{
			/Input ""
			/Expected *
		}
		/Simple
		{
			/Input "<a/>"
			/Expected
			{
				{
					/a	*
				}
			}
		}
		/Double
		{
			/Input	"<a/><b/><cee>dee</cee>"
			/Expected
			{
				{ /a	* }
				{ /b	* }
				{
					/cee	*
					dee
				}
			}
		}
		/Special
		{
			/Input	"<a b='&lt;c&gt;'/>"
			/Expected
			{
				{ /a	{ /b "&lt;c&gt;" } }
			}
		}
		/FDResponse
		{
			/Input
			{
				"<FDResponse status=\"ok\">"
				"	<tc name=\"999.999.999.999\" appType=\"VEGA\">"
				"		<display-name>Hüglü güglü</display-name>"
				"	</tc>"
				"	<tc name=\"999.999.999.991\" appType=\"VEGA\">"
				"		<display-name>Dead Parrot</display-name>"
				"	</tc>"
				"</FDResponse>"
			}
			/Expected
			{
				{
					/FDResponse
					{
					  /status "ok"
					}
					"\x09"
					{
					  /tc
					  {
						/name "999.999.999.999"
						/apptype "VEGA"
					  }
					  "\x09\x09"
					  {
						/display-name *
						"H\xFCgl\xFC g\xFCgl\xFC"
					  }
					  "\x09"
					}
					"\x09"
					{
					  /tc
					  {
						/name "999.999.999.991"
						/apptype "VEGA"
					  }
					  "\x09\x09"
					  {
						/display-name *
						"Dead Parrot"
					  }
					  "\x09"
					}
				}
			}
		}
		/WithExternalDTD
		{
			/Input
			{
				"<?xml version=\"1.0\" encoding=\"ISO-8859-1\"?>"
				"<!DOCTYPE FDRESPONSE SYSTEM \"fdresponse.dtd\">"
				"<FDResponse status=\"ok\"/>"
			}
			/Expected
			{
				  {
					/?xml " version=\"1.0\" encoding=\"ISO-8859-1\""
				}
				{
					/"!DOCTYPE" "FDRESPONSE"
					{
					  /SYSTEM
					  {
						"fdresponse.dtd"
					  }
					}
				}
				{
					/FDResponse
					{
					  /status "ok"
					}
				}
			}
		}
	}
}
