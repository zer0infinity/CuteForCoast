{
	/useSSL {	#mapper for test purposes
		/Output {
			/HTTPResponseMapper *
			/HTTPMimeHeaderMapper	*
			/HTTPBody {
				/HTTPBodyMapper *
			}
		}
	}

	/ExecTestOut {
		/HTTPBody {
			/HTTPBodyMapper *
		}
	}
	/CgiExecTest {
		/HTTPBody {
			/HTTPBodyMapper *
		}
	}
	/HeaderSuppressMapper {
		/DestinationSlot "Mapper"
	}
	/HTTPMimeHeaderMapper { # dummy, but not empty
	}

	/HTTPMimeHeaderWithSuppress {
		/Suppress {
			"Connection"
			"server"
		}
	}
	/HTTPMimeHeaderWithAdd {
		/Add {
			/fd-info	"foo"
			/fd-stuff	"bar"
		}
	}
	/HTTPMimeHeaderWithSuppressAndAdd {
		/Suppress {
			"Connection"
		}
		/Add {
			/server			"Coast 2.0"
			/fd-format		"special"
		}
	}
	/HTTPMimeHeaderWithSuppressAndAddNoHeaderFieldSplit {
		/Suppress {
			"Connection"
		}
		/Add {
			/server			"Coast 2.0"
			/fd-format		"special"
		}
	}
	/SendReceiveOnce {
		/PutPolicy Put
		/DestinationSlot	""
		/Output {
			/ImportResponseAny *
		}
	}
	/RecreateSocket {
		/PutPolicy Put
		/DestinationSlot	""
		/Output {
			/ImportResponseAny *
		}
	}
	/ImportResponseAny {
		/PutPolicy Put
		/DestinationSlot	""
	}
	/EatUpToEOFMapper {
		/PutPolicy Append
		/DestinationSlot	"Rubbish"
	}
	/literalSuppressedHeader {
		/Suppress {
			"Connection"
			"server"
		}
	}
	/TestedMapper {
	}
}
